# Docker-specific environment file
# This file should be copied to .env.production and filled with actual values

# Node Environment
NODE_ENV=production
PORT=3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
DATABASE_URL=

# OpenAI
OPENAI_API_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Email
EMAIL_PROVIDER=resend
EMAIL_FROM=
EMAIL_FROM_NAME=Talk-To-My-Lawyer
RESEND_API_KEY=

# Rate Limiting (Upstash or local Redis)
# For local Redis in docker-compose:
# KV_REST_API_URL=redis://redis:6379
# KV_REST_API_TOKEN=changeme
# For Upstash in production:
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Admin
ADMIN_EMAIL=
ADMIN_PORTAL_KEY=
CRON_SECRET=

# Application
NEXT_PUBLIC_APP_URL=https://yourdomain.com
ENABLE_TEST_MODE=false

# Optional Redis password for local development
REDIS_PASSWORD=changeme
